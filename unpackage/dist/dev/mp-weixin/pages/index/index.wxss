.body {
  font-size: 32rpx;
}
.body .title {
  font-size: 34rpx;
  padding: 24rpx;
}
.body .classMoudle {
  display: flex;
  padding: 20rpx;
  flex-wrap: wrap;
}
.body .classMoudle .classBox {
  text-align: center;
  width: 20%;
  margin-bottom: 20rpx;
}
.body .classMoudle .classBox .icon {
  width: 80rpx;
  height: 80rpx;
}
.body .classMoudle .classBox .text {
  font-size: 28rpx;
}
.body .activityMoudle {
  display: flex;
  padding: 10rpx 20rpx;
}
.body .activityMoudle .activityBox {
  width: 50%;
  margin-right: 20rpx;
}
.body .activityMoudle .activityBox image {
  width: 100%;
  border-radius: 20rpx;
  height: 300rpx;
}
.body .activityMoudle .activityBox:nth-child(2n) {
  margin-right: 0;
}
.body .goodsMoudle {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
.body .goodsMoudle .goodsBox {
  width: 48%;
  margin-bottom: 20rpx;
}
.body .goodsMoudle .goodsBox image {
  width: 100%;
  box-shadow: 0rpx 2rpx 6rpx 0rpx;
}
.body .goodsMoudle .goodsBox .name {
  margin: 20rpx 0;
}
.body .goodsMoudle .goodsBox .text {
  display: flex;
}
.body .goodsMoudle .goodsBox .text .price {
  color: red;
}

